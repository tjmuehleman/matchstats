<?xml version="1.0" encoding="UTF-8"?>
<%if @just_quote %>
<Response>
    <Message>
      <%=@quote%>
    </Message>
</Response>
<%else%>
<Response>
    <Message>
      Your match has been recorded.
      The winner is <%=@winner%>. The loser is <%=@loser%>.
      Look the loser in the eye and say
      "<%=@quote%>"
    </Message>
</Response>
<%end%>
